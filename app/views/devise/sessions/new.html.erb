<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
            <h2 class="text-center mb-4">Inicio de sesión</h2>

            <div class="form-group">
              <%= f.label :email, 'Correo', class: 'sr-only' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, 'Contraseña', class: 'sr-only' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, 'Recordar usuario', class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="form-group text-center mt-3">
              <%= f.submit "Iniciar sesión", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
